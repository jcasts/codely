# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.spec 'codely' do
  developer('Jeremie Castagna', 'yaksnrainbows@gmail.com')
  self.readme_file      = "README.rdoc"
  self.history_file     = "History.rdoc"
  self.extra_rdoc_files = FileList['*.rdoc']

  self.extra_deps << ['datamapper',      '~>1.2.0']
  self.extra_deps << ['github-linguist', '~>2.3.4']
  self.extra_deps << ['sinatra',         '~>1.3.3']
  self.extra_deps << ['rainbows',        '~>4.4.1']
end

